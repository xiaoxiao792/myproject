<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scan_lv_item_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/shape_ac_device_btn_refresh"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_device_list_lv_item_img_bg"
        android:src="@mipmap/ac_device_list_img" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/device_list_lv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认值"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/device_list_lv_item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XYD-Printer"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ac_device_list_more" />
    </RelativeLayout>
</LinearLayout>
