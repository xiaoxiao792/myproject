<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--标题-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#389BEE"
        android:gravity="center"
        android:text="信盈达·智能家居控制"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <!--RadioGroup-->
        <RadioGroup
            android:id="@+id/operate_rg_group"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <!--修改信息-->
            <RadioButton
                android:id="@+id/operate_rb_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_operate_update_rb_bg"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="修改信息"
                android:textColor="@color/selector_operate_update_lookstatus_rb_txtcolor"
                android:textSize="20sp" />
            <!--查看状态-->
            <RadioButton
                android:id="@+id/operate_rb_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_operate_lookstatus_rb_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="查看状态"
                android:textColor="@color/selector_operate_update_lookstatus_rb_txtcolor"
                android:textSize="20sp" />
        </RadioGroup>

    </LinearLayout>
    <!--Fragment-->
    <FrameLayout
        android:id="@+id/operate_gl_containter"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
